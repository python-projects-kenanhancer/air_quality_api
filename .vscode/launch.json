  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Uvicorn",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "python": ".venv/bin/python",
      "args": [
        "app.main:app",
        "--reload"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "jinja": true
    },
    {
      "name": "Docker: Python - Fastapi",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "python": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
          }
        ],
        "projectType": "fastapi"
      }
    }
  ]
}
